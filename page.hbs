{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">

    <article class="{{page_class}}">

        {{! Each page has the blog logo at the top, with a link back to the home page }}
        <header class="page-header">
            <a id="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        </header>

        {{! Everything inside the #page tags pulls data from the page }}
        {{#page}}

        <h1 class="page-title">{{{title}}}</h1>

        <section class="page-content">
            {{content}}
        </section>

        {{/page}}

    </article>

</main>